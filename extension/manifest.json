{
  "manifest_version": 2,
  "name": "PC Chrome",
  "description": "An extension which controls how much time can be spent on websites",
  "version": "1.2.4",
  "icons": {
    "128": "assets/icons/app_icon_128.png"
  },
  "browser_action": {
    "default_icon": "assets/icons/app_icon.png",
    "default_popup": "src/popup.html"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end",
      "css": [
        "src/site-timer.css",
        "src/site-blockscreen.css"
      ],
      "js": [
        "thirdParty/jquery-3.5.1.min.js",
        "src/site-monitor.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}